# Example environment configuration for the Offshore Leaks MCP Server

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# Optional Neo4j Connection Settings
NEO4J_MAX_CONNECTION_LIFETIME=1000
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_TIMEOUT=30.0

# Server Configuration
SERVER_NAME=offshore-leaks-mcp-server
SERVER_VERSION=0.1.0
DEBUG=false

# Query Limits and Performance
MAX_QUERY_COMPLEXITY=1000
DEFAULT_LIMIT=20
MAX_LIMIT=100
QUERY_TIMEOUT=30.0
